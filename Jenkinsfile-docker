pipeline {
 agent none

 stages {
  stage('CheckOut') {
   agent any
   steps {
    git branch: 'main',
    url: 'https://github.com/yoon-mina/source-maven-java-spring-hello-webapp.git'
    }
   }
  stage('Build') {
   agent {
    docker { image 'maven:3-openjdk-17' }
   }
   steps {
    sh 'mvn clean package'
   } 
  }
  stage('ImageBuild') {
   agent {
    docker { image 'maven:3-openjdk-17' }
   }   
   steps {
    sh 'docker image build -t tomcat:hello .'
   }
  }
  stage('ImageTag') {
   agent {
    docker { image 'maven:3-openjdk-17' }
   }
   steps {
    sh 'docker image tag tomcat:hello yoon-mina/tomcat:$BUILD_NUMBER'
    sh 'docker image tag tomcat:hello yoon-mina/tomcat:latest'
   }
  }
  stage('ImagePush') {
   agent {
    docker { image 'maven:3-openjdk-17' }
   }
   steps {
    withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1') {
     sh 'docker image push yoon-mina/tomcat:$BUILD_NUMBER'
     sh 'docker image push yoon-mina/tomcat:latest'
    }
   }
  }
  stage('Running Container') {
   agent {
    docker { image 'docker:dind' }
   }
   steps {
    sh 'docker -H tcp://192.168.56.103:2375 run -d --name webserver -p 80:8080 yoon-mina/tomcat:latest'
   }
  }
 }
}
